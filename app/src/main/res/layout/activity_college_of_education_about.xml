<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            style="@style/loginCard"
            app:cardCornerRadius="@dimen/loginCardRadius"
            android:elevation="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:layout_marginBottom="@dimen/loginViewsMargin"
            android:background="@color/whiteCardColor">



            <LinearLayout
                style="@style/linearParent"
                android:layout_gravity="center"
                android:padding="@dimen/loginViewsMargin">

                <ImageView
                    style="@style/headerTextPrimary"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:src="@drawable/mnce"
                    />

                <TextView
                    style="@style/headerTextPrimary"
                    android:text="About us"
                    android:textSize="35dp"

                    />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="arial"
                    android:padding="10dp"
                    android:text="Maa Narmada College of Education, Dhamnod is a platform where knowledge, resources and opportunities meet. In the age of globalization, to build a truly different institution of teacher education in Dhamnod (M.P.) an institution with a marked difference in quality to serve the local people in global arena. Our aim is to build an effervescent community of Teachers, where faculty and students are cronies in a mutually inspirational education process, engrossed in learning. MNCE is one of the most ambitious educational initiatives place of Nimaad Region of Madhya Pradesh."
                    android:textColor="#000"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Courses:"
                    android:fontFamily="arial"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B.ED , D.ED "
                    android:fontFamily="arial"
                    android:textColor="#000"
                    android:padding="20dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact:"
                    android:fontFamily="arial"
                    style="bold"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+919644005580 \n mncedhamnod14@gmail.com"
                    android:textColor="#000"
                    android:padding="10dp"
                    />


                <Button
                    android:id="@+id/bt_collegeOfEducation_enquiry"
                    style="@style/loginButton"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:text="Admission-Enquiry" />
                <Button
                    android:id="@+id/bt_collegeOfEducation_admission"
                    style="@style/loginButton"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:padding="10dp"
                    android:text="Admission-Registration"
                    />
                <Button
                    android:id="@+id/bt_collegeOfEducation_gallery"
                    style="@style/loginButton"
                    android:text="Gallery"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:id="@+id/IV_collegeOfEducation_image1"
                        android:background="@drawable/ce_1"
                        />
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:id="@+id/IV_collegeOfEducation_image2"
                        android:visibility="gone"
                        android:layout_margin="8dp"
                        android:background="@drawable/ce_2"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:id="@+id/IV_collegeOfEducation_image3"
                        android:visibility="gone"
                        android:background="@drawable/ce_3"
                        />
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/ce_4"
                        android:id="@+id/IV_collegeOfEducation_image4"
                        android:visibility="gone"
                        />

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</ScrollView>
