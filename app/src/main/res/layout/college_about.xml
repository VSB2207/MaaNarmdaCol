<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
style="@style/loginCard"
app:cardCornerRadius="@dimen/loginCardRadius"
android:elevation="5dp"
android:layout_gravity="center"
android:layout_marginTop="@dimen/loginViewsMargin"
android:layout_marginBottom="@dimen/loginViewsMargin"
android:background="@color/whiteCardColor">



<LinearLayout
    style="@style/linearParent"
    android:layout_gravity="center"
    android:padding="@dimen/loginViewsMargin">

    <ImageView
        style="@style/headerTextPrimary"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/loginViewsMargin"
        android:src="@drawable/mnmv"
         />

    <TextView
        style="@style/headerTextPrimary"
        android:text="About us"
        android:textSize="35dp"

        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="arial"
        android:padding="10dp"
        android:text="The promoting body of the Group is Hazurba Education and Social Welfare Society ,Dhamnod. The Society was registered in the year 2002 with the objectives of spreading education in the Nimar regions besides many other objectives for up-gradation of society and welfare of the poor and deprived people. The society is functioning under the patronage of its Honâ€™ble Chairman Shri Navin Nahar, a famous Industrialist and their team members."
        android:textColor="#000"
        android:textSize="29dp" />

    <Button
        android:id="@+id/enquiry"
        style="@style/loginButton"
        android:text="Enquiry"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/loginViewsMargin"/>







</LinearLayout>
</androidx.cardview.widget.CardView>





