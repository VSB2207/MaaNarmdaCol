<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/academy_layout"
    >

    <androidx.cardview.widget.CardView
        style="@style/loginCard"
        app:cardCornerRadius="@dimen/loginCardRadius"
        android:elevation="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/loginViewsMargin"
        android:layout_marginBottom="@dimen/loginViewsMargin"
        android:background="@color/whiteCardColor">



        <LinearLayout
            style="@style/linearParent"
            android:layout_gravity="center"
            android:padding="@dimen/loginViewsMargin">

            <ImageView
                style="@style/headerTextPrimary"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:src="@drawable/mnmv"
                />

            <TextView
                style="@style/headerTextPrimary"
                android:text="About us"
                android:textSize="35dp"

                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="arial"
                android:padding="10dp"
                android:text="The promoting body of the Group is Hazurba Education and Social Welfare Society ,Dhamnod. The Society was registered in the year 2002 with the objectives of spreading education in the Nimar regions besides many other objectives for up-gradation of society and welfare of the poor and deprived people. The society is functioning under the patronage of its Honâ€™ble Chairman Shri Navin Nahar, a famous Industrialist and their team members."
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Courses:"
                android:fontFamily="arial"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B.Sc.(Seed Technology) , B.Sc.(Plain)  \nB.Sc(Bio Technology),B.Sc.(Computer Science) \nB.A(Computer) , B.C.A , M.Com\nM.Sc, PGDCA, DCA,B.Com(Plain) \nB.Com (Computer Appl.) "
                android:fontFamily="arial"
                android:textColor="#000"
                android:padding="20dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact:"
                android:fontFamily="arial"
                style="bold"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91-7291-224433 \n mndcdhamnod03@gmail.com"
                android:textColor="#000"
                android:padding="20dp"
                />
            <Button
                android:id="@+id/bt_school_enquiry"
                style="@style/loginButton"
                android:text="Admission-Enquiry"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/loginViewsMargin"/>

            <Button
                android:id="@+id/bt_school_admission"
                style="@style/loginButton"
                android:text="Admission-Registration"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/loginViewsMargin"
                android:padding="10dp"
                />
            <Button
                android:id="@+id/bt_school_gallery"
                style="@style/loginButton"
                android:text="Gallery"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/loginViewsMargin"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:id="@+id/IV_school_image1"
                    android:visibility="gone"
                    android:layout_margin="8dp"
                    android:background="@drawable/dc_1"
                    />
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@drawable/dc_2"
                    android:layout_margin="8dp"
                    android:id="@+id/IV_school_image2"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:id="@+id/IV_school_image3"
                    android:visibility="gone"
                    android:background="@drawable/dc_3"
                    />
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:id="@+id/IV_school_image4"
                    android:visibility="gone"
                    android:background="@drawable/dc_4"
                    />

            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>


</ScrollView>





